<!-- #create new concern form  -->
<h1> Edit a new Concern below: </h1>
<br></br>
<form action="/concerns/<%= @concern.id %>/edit" method="post">
<label> File Name: </label>
<!-- #dropdown --> <input type="text" name="file_name">
<br><br>
<label> Name of Method </label>
<input type="text" name="name_of_method">
<br></br>
<label> Note/Summary of Concern: </label>
<textarea rows="4" cols="50" name="note"></textarea>
<br><br>
<label> Add a New Category of Concern: </label>
<input type="text" name="category">
<br>OR<br>
<label> Select from an Existing Category: </label><br>
<% @categories.each do |category| %>
<input type="checkbox" value="<%= category %>"><%= category %><br>
<% end %>
<input type="submit" name="submit" value="submit">
</form>
