<!-- #create new concern form  -->
<h1> Edit the Concern below: </h1>
<br></br>
<form action="/concerns/<%= @concern.id %>/edit" method="post">
<label> File Name: </label>
<input type="text" name="file_name" placeholder="<%=@concern.file_name%>">
<br><br>
<label> Name of Method </label>
<input type="text" name="name_of_method" placeholder="<%=@concern.name_of_method%>">
<br></br>
<label> Note/Summary of Concern: </label>
<textarea rows="4" cols="50" name="note" placeholder="<%=@concern.note%>"></textarea>
<br><br>
<label> Category of Concern: "Syntax", "Scope", "Semantics", "Functionality", "Not DRY", "Not Single Responsibility", "Needs testing"</label>
<input type="text" name="category" placeholder="<%=@concern.category%>">
<input type="submit" name="submit" value="submit">
</form>
<a href="/concerns">Go Back </a><br>
