<!-- #create new concern form  -->
<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>
<h1> <%= @project_name %> - Edit Concern</h1>
<h3> File name: <%= @concern.file_name %> </h3>
<h3> Method name: <%= @concern.name_of_method %> </h3>
<form action="/concerns/<%= @concern.id %>" method="post">
<label> Note/Summary of Concern: </label>
<textarea rows="4" cols="50" name="note" placeholder="<%=@concern.note%>"></textarea>
<br><br>
<label> Category of Concern: "Syntax", "Scope", "Semantics", "Functionality", "Not DRY", "Not Single Responsibility", "Needs testing", or "Other"</label>
<input type="text" name="category" placeholder="<%=@concern.category%>">
<input type="submit" name="submit" value="submit">
</form>
<a href="/concerns">Go Back </a><br>
