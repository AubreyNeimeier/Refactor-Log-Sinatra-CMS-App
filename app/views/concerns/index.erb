<!-- users homepage showing them only their concerns  -->
<h1>All Your Projects</h1>

<% @projects.each do |project|%>

  <h4>Project Name: <%= project.name %></h4>
  <p>Project Summary: <%= project.summary %></p>
  <p> Concerns </p>
  <ul><% project.concerns.each do |concern|%>
    <li><a href="/concerns/<%= concern.id %>"> <%=concern.name_of_method%></a> - Error related to: <%= concern.category%> </li>
  <% end %></ul>
<% end %>
<br><br>
<a href="/projects/new"> Create a new Project </a><br>
<a href="/concerns/new"> Create a new concern </a>


